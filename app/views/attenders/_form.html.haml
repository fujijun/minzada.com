= form_for @attender do |f|
  - if @attender.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attender.errors.count, "error")} prohibited this attender from being saved:"
      %ul
        - @attender.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :event_id
    = f.number_field :event_id
  .actions
    = f.submit 'Save'
